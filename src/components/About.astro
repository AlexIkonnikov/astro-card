---
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import { getEntry } from 'astro:content';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const entry = await getEntry('about', lang);
if (!entry) {
  return;
}
const title = entry.data.title;
const paragraphs = entry.body?.split('\n\n');
---

<section id='about' class='p-4 pt-20'>
  <div class='max-w-2xl mx-auto flex flex-col items-center'>
    <h1 class='text-2xl mr-auto font-bold'>{t('nav.about')}:</h1>
    <div>
      <img
        src='img/avatar.jpg'
        alt='Sasha'
        class='rounded-full mb-4 w-48 h-48 md:w-120 md:h-120 object-cover'
      />
    </div>
    <div>
      <p class='text-xl mb-2'>{title}</p>
      {paragraphs?.map((p) => <p class='text-xl mb-2'>{p}</p>)}
    </div>
  </div>
</section>
